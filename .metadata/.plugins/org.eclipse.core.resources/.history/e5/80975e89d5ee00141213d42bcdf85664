public class DivideConquer {
	public static void main(String[] args) 
	{
		int myNums[] = {1, 2, 3, 4, 5, 6, 7, 7 ,7};

		printList(myNums);
	}

	// sIdx is the index of the first element of the sublist
	// eIdx is the index of the last element of the sublist
	public static int divide(int list[], int sIdx, int eIdx)
	{
		// base case
		if (eIdx - sIdx == 0) // sublist is length 1
		{
			return eIdx;
		}

		int midIdx = (sIdx + eIdx) / 2; // we know that it is integer div.
		
		int left = divide(list, sIdx, midIdx);
		int right = divide(list, midIdx+1, eIdx);
		
		conquer(list, left, right);
		
	}

	public static void conquer(int list[], int left, int right)
	{
		
	}
	
	
	public static void printList(int list[])
	{
		for (int i=0; i< list.length; i++)
		{
			System.out.println(list[i]);
		}
	}
}