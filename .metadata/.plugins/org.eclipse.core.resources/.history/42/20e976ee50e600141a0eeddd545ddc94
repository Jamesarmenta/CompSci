
public class Problem3 {

	public static void main(String[] args)
	{
		System.out.println(meth7(4));
		System.out.println("- - - - ");
		System.out.println(rmeth7(4));
	}
	
	static int meth7(int x)
	{
		int y = 0;
		for (int i=1; i<=x; i++)
		{
			if (i%2 ==1) //if odd
			{
				y += i*5;
			}
			else
			{
				y+=i;
			}
		}
		return y;
	}
	
	static int rmeth7(int x)
	{
		return thermeth7(0, 0, x);
	}
	
	static int thermeth7(int i, int t, int x)
	{
		if (i==x)
		{
			t = t+(i*5);
			return t;
		}
		if (i % 2==1)
		{
			return thermeth7(i+1,t+(i*5), x);
		}
		else
		{
			return thermeth7(i+1, t+i, x);
		}
	}
	
}
