
public class Lab08 {

	public static void main(String[] args) 
	{
		int list[] = {2,4};
		
		if(evens(list, 0) == true)
		{
			System.out.println("All evens!!");
		}
		else
		{
			System.out.println("NOOOOPE");
		}
		

	}
	
	public static boolean evens(int list[], int idx)
	{
		if (list[idx]%2 !=0)
		{
			return false;
		}
		
		if(idx == list.length-1)
		{
			return true;
		} 
		
		evens(list, idx+1);
		
		return false;
		
	}

}
