
public class Problem3 {

	public static void main(String[] args)
	{
		System.out.println(meth7(5));
		System.out.println("- - - - ");
		System.out.println(rmeth7(5));
	}
	
	static int meth7(int x)
	{
		int y = 0;
		for (int i=1; i<=x; i++)
		{
			if (i%2 ==1) //if odd
			{
				y += i*5;
			}
			else
			{
				y+=i;
			}
		}
		return y;
	}
	
	static int rmeth7(int x)
	{
		int t = 0;
		return thermeth7(1, t, x);
	}
	
	static int thermeth7(int i, int t, int x)
	{
		if (i==x)
		{
			System.out.println("Final");
			return t;
		}
		if (i % 2==1)
		{
			System.out.println(t+(i*5));
			return thermeth7(i+1,t+(i*5), x);
		}
		else
		{
			System.out.println(t+i);
			return thermeth7(i+1, t+i, x);
		}
	}
	
}
