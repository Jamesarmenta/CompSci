
public class Lab08 {

	public static void main(String[] args) 
	{
		int list[] = {0,2,4};
		
		evens(list, 0);
		

	}
	
	public static boolean evens(int list[], int idx)
	{
		if (idx%2 !=0)
		{
			return false;
		}
		
		if(idx == list.length-1)
		{
			return true;
		} 
		
		evens(list, idx+1);
		
		return false;
		
	}

}
