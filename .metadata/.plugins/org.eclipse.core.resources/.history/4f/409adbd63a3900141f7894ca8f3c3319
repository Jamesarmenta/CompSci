import java.util.*;

public class Project1 {
    static int billTotal;
    public static void main(String[] args) {
    input();
    output();   
   }

    public static void input() {

        Scanner console = new Scanner(System.in);

        /* Get total of bill */
        System.out.print("Bill total: ");
        int billTotal = console.nextInt();

        /* Get tip percentage */
        System.out.print("Tip percentage: ");
        double tipPercent = console.nextInt();
        
        /* Multiply and print */
        int tipAmount = tipPercent * billTotal;
        System.out.print("Tip Amount: " + tipAmount);
    }